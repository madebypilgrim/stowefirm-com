{# Globals #}
{% set navBackground = 'lt' %}

{# Markup #}
{% extends '_layouts/main' %}

{% block content %}
    <article>
        <header>
            {% include '_components/hero' with {
                heading: entry.pageHeading,
                ctas: entry.pageCtas.all()|map(c => craft.components.getLinkFromCta(c)),
                backgroundImage: entry.pageBackgroundImage.one(),
            } %}
        </header>
    </article>
{% endblock %}
